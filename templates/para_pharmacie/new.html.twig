              <h1 class="text-center mb-4" style="color: green;">Create ParaPharmacie</h1>
              <form method="post" novalidate> 
   {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<table class="table">
    
    <tbody>
        <tr>
            <td>{{ form_label(form.email) }}</td>
            <td>{{ form_widget(form.email) }}</td>
            <td>{{ form_errors(form.email) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.numtel) }}</td>
            <td>{{ form_widget(form.numtel) }}</td>
            <td>{{ form_errors(form.numtel) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.nbrPharmaciens) }}</td>
            <td>{{ form_widget(form.nbrPharmaciens) }}</td>
            <td>{{ form_errors(form.nbrPharmaciens) }}</td>
