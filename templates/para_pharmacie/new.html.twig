        </tr>
        <tr>
            <td>{{ form_label(form.nomPara) }}</td>
            <td>{{ form_widget(form.nomPara) }}</td>
            <td>{{ form_errors(form.nomPara) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.ville) }}</td>
            <td>{{ form_widget(form.ville) }}</td>
            <td>{{ form_errors(form.ville) }}</td>
        </tr>
    </tbody>
</table>
 <button type="submit" class="btn btn-block btn-primary">{{ button_label|default('Save') }}</button>
